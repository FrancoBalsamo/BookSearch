<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Trantor.TrantorActivity"
    android:background="@drawable/trantor_bkgd"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/negro"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/timeless"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="Imperial Library"
                android:textColor="#AFAFAF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/etBuscar"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/trantor_sinfoco"/>

                <Button
                    android:id="@+id/btnBusqueda"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_search"
                    android:textColor="@color/blanco" />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCapitulosSeleccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>